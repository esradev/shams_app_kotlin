<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ShamsAlMaarif" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Shams.Splash" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>

        <!-- App icon or logo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>

        <!-- Optional icon background -->
        <item name="windowSplashScreenIconBackgroundColor">@color/splash_bg</item>

        <!-- Theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.ShamsAlMaarif</item>
    </style>

</resources>
